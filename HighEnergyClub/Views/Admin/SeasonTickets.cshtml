@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
@using HighEnergyClub.PL.ViewModels.Admin;
@model AdmiSeasonTicketTypeViewModel

<div class="list-group">
    @foreach (var item in Model.SeasonTicketTypes)
    {
        <div class="my-10">
            <a href=@("/seasontickets/details/" + item.Id) class="list-group-item list-group-item-action">@item.SeasonTicketTitle</a>
            <form method="post" asp-action="DeletenSeasonTickets" asp-route-id="@item.Id" class="btn-group-sm">
                <input type="hidden" asp-for="@item.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Видалити цей тип абонементу?')" />
            </form>
        </div>}
</div>
<div class="btn-group" role="group" aria-label="Page">
    @if (Model.Page > 1)
    {
        <a type="button"
           href="@Url.Action("SeasonTickets", "Admin", new { page = Model.Page - 1 })"
           class="btn btn-outline-primary">Previous</a>}

    @if (Model.TotalCount > Model.PageSize * Model.Page)
    {
        <a type="button"
           href="@Url.Action("SeasonTickets", "Admin", new { page = Model.Page + 1 })"
           class="btn btn-primary">Next</a>}
</div>