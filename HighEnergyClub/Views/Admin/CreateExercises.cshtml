@using System.Diagnostics.CodeAnalysis
@model HighEnergyClub.PL.ViewModels.ExerciseViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div>
    <h1>Додати вправу</h1>
    <form method="post">

        <div>
            <label class="form-label" asp-for="ExerciseName"></label>
            <input class="form-control" required type="text" name="ExerciseName" asp-for="ExerciseName" />
        </div>

        <div>
            <label class="form-label" asp-for="ExerciseDescription"></label>
            <input class="form-control" required type="text" name="ExerciseDescription" asp-for="ExerciseDescription" />
        </div>

        <div>
            <label class="form-label" asp-for="URL"></label>
            <input class="form-control" required type="url" name="URL" asp-for="URL" />
        </div>

        <div>
            <input type="submit" class="btn btn-primary" value="Додати" />
        </div>
    </form>
</div>

